<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:orientation="vertical"
    tools:context=".mvp.view.fragment.HomeFragment">

    <include layout="@layout/home_nav"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartrefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/home_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/home_today_list"></include>
        <com.example.schoolapp.ui.TouchRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/home_rcyclerView_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </com.example.schoolapp.ui.TouchRelativeLayout>
    </LinearLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </ScrollView>
</LinearLayout>