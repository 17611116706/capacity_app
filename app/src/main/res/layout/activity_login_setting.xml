<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.LoginSetting">

    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:gravity="center"
            android:textColor="@color/black_4"
            android:textSize="17sp"
            android:text="个人信息设置"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <ImageView
            android:id="@+id/loginsetting_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/src_login_left"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <TextView
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:id="@+id/loginsetting_finish"
            android:textSize="16sp"
            android:textColor="@color/theme"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/src_login_avator"
            android:id="@+id/loginsetting_avator"
            android:layout_width="90dp"
            android:layout_height="90dp"></ImageView>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_width="295dp"
        android:layout_height="76dp">
        <TextView
            android:textColor="@color/color_C4C4C6"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"></TextView>
        <EditText
            android:layout_alignParentBottom="true"
            android:background="@drawable/loginsetting_edittext_bg"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/color_C4C4C6"
            android:hint="在此输入昵称"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/loginsetting_name"
            ></EditText>
    </RelativeLayout>


</LinearLayout>