<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.login.LoginSetting">

    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:gravity="center"
            android:textColor="@color/black_4"
            android:textSize="17sp"
            android:text="个人信息设置"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
        <ImageView
            android:id="@+id/loginsetting_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/src_login_left"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <TextView
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:id="@+id/loginsetting_finish"
            android:textSize="16sp"
            android:textColor="@color/theme"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/src_login_avator"
            android:id="@+id/loginsetting_avator"
            android:layout_width="90dp"
            android:layout_height="90dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@color/color_F8F8F8"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="58dp"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_width="295dp"
        android:layout_height="76dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/color_C4C4C6"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"></TextView>
        <EditText
            android:layout_alignParentBottom="true"
            android:background="@drawable/loginsetting_edittext_bg"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/black_4"
            android:textColorHint="@color/color_C4C4C6"
            android:hint="在此输入昵称"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/loginsetting_name"
            ></EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="112dp"
        android:layout_height="76dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/color_C4C4C6"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"></TextView>
        <LinearLayout
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <RadioButton
                    android:id="@+id/loginsetting_sex_nan"
                    android:background="@drawable/login_sex_select"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="@color/white"
                    android:button="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"></RadioButton>
                <RadioButton
                    android:id="@+id/loginsetting_sex_nv"
                    android:button="@null"
                    android:layout_marginLeft="16dp"
                    android:text="女"
                    android:gravity="center"
                    android:background="@drawable/login_sex_unselect"
                    android:layout_width="48dp"
                    android:layout_height="48dp"></RadioButton>

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="295dp"
        android:layout_height="76dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/color_C4C4C6"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"></TextView>
        <EditText
            android:editable="false"
            android:id="@+id/loginsetting_data"
            android:layout_alignParentBottom="true"
            android:background="@drawable/loginsetting_edittext_bg"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/black_4"
            android:textColorHint="@color/color_C4C4C6"
            android:hint="1988-11-04"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            ></EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="295dp"
        android:layout_height="76dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/color_C4C4C6"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属大学"></TextView>
        <EditText
            android:editable="false"
            android:id="@+id/loginsetting_univercity"
            android:layout_alignParentBottom="true"
            android:background="@drawable/loginsetting_edittext_bg"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/black_4"
            android:textColorHint="@color/color_C4C4C6"
            android:hint="请选择所属大学"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            ></EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="295dp"
        android:layout_height="76dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/color_C4C4C6"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家乡"></TextView>
        <EditText
            android:editable="false"
            android:id="@+id/loginsetting_home"
            android:layout_alignParentBottom="true"
            android:background="@drawable/loginsetting_edittext_bg"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/black_4"
            android:textColorHint="@color/color_C4C4C6"
            android:hint="请选择家乡"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            ></EditText>
    </RelativeLayout>
</LinearLayout>