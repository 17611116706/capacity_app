<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="345dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="41dp">
    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="41dp">
        <ImageView
            android:id="@+id/home_recyclerview_item_headimg"
            android:layout_margin="0.5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"></ImageView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/home_recyclerview_item_name"
                android:text="小小的太阳"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:textColor="@color/black_4"
                ></TextView>
            <TextView
                android:id="@+id/home_recyclerview_sendtime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="5分钟前"
                android:textColor="@color/gray_A"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/home_recyclerview_item_more"
        android:layout_marginTop="8.5dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/src_home_more"
        android:layout_width="24dp"
        android:layout_height="24dp"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8.5dp"
        android:layout_width="345dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_recyclerview_item_message"
            android:gravity="center_vertical"
            android:textColor="@color/black_4"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t 要做的事情总找的出时间和机会,不要做的事情总找的出借口。"
            android:layout_width="wrap_content"
            android:lineHeight="22dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/home_recyclerview_item_title"
            android:gravity="center_vertical"
            android:textColor="@color/theme"
            android:text="#句子、文案"
            android:layout_width="wrap_content"
            android:lineHeight="22dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/home_recyclerview_item_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
       <include layout="@layout/item_double_img"></include>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="24dp">
        <ImageView
            android:id="@+id/home_recyclerview_item_loveicon"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/src_home_unlove"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <TextView
            android:id="@+id/home_recyclerview_item_love_count"
            android:paddingRight="3.5dp"
            android:paddingLeft="3.5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/gray_A"
            android:text="456"></TextView>
        <ImageView
            android:id="@+id/home_recyclerview_item_comment"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/src_home_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <TextView
            android:id="@+id/home_recyclerview_item_comment_count"
            android:paddingRight="3.5dp"
            android:paddingLeft="3.5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/gray_A"
            android:text="89"></TextView>
        <ImageView
            android:id="@+id/home_recyclerview_item_share"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/src_home_share"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>

    </LinearLayout>
</LinearLayout>