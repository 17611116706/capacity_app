<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="345dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="8dp"
        android:id="@+id/moreimg1"
        android:layout_width="168dp"
        android:layout_height="168dp"></ImageView>
    <ImageView
        android:id="@+id/moreimg2"
        android:layout_marginLeft="8dp"
        android:layout_width="168dp"
        android:layout_height="168dp"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/moreimg3"
        android:layout_marginLeft="8dp"
        android:layout_width="168dp"
        android:layout_height="168dp"></ImageView>
    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_width="168dp"
        android:layout_height="168dp">
        <ImageView
            android:id="@+id/moreimg4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>
        <TextView
            android:id="@+id/image_count"
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4+"
            android:gravity="center"
            android:textSize="40sp"
            ></TextView>
    </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>