<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="130dp"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="104dp"
        android:layout_height="104dp">
        <ImageView
            android:id="@+id/every_choose_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>
        <TextView
            android:id="@+id/every_choose_sign"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="每日工资"
            android:textSize="10sp"
            android:background="@drawable/life_choose_style"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="16dp"></TextView>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/every_choose_title"
        android:gravity="center"
        android:textColor="@color/black_4"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
</LinearLayout>